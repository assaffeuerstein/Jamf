# Flask Configuration
# Copy this file to .env and update the values

FLASK_SECRET_KEY=change-this-to-a-secure-random-string
FLASK_ENV=development

# Azure AD Configuration (Optional - for SSO)
AZURE_AD_ENABLED=false
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Jenkins Configuration
JENKINS_URL=http://localhost:8080
JENKINS_USER=your-jenkins-username
JENKINS_TOKEN=your-jenkins-api-token
JENKINS_VERIFY_SSL=true

# Jenkins Job Names (customize if different)
JENKINS_JOB_ADD_REMOVE=Add_Remove_Mac
JENKINS_JOB_BASE_CONFIG=Mac_Base_Config
JENKINS_JOB_XCODE=Install_Xcode_CLI

# Application Settings
DEFAULT_DOMAIN=macfarm.example.com

